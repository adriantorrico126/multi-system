# Configuración del Agente de Impresión - Sitemm
# Modo de desarrollo local

# URL del servidor backend de impresión
PRINT_SERVER_URL=http://localhost:3001

# ID del restaurante
RESTAURANTE_ID=1

# Token de autenticación del agente
PRINT_AGENT_TOKEN=a1b2c3d4e5f607189a0b1c2d3e4f506172a3b4c5d6e7f8091a2b3c4d5e6f7081

# Nombre descriptivo del agente
AGENT_NAME=Agente Principal

# Tipo de impresora
PRINTER_TYPE=EPSON

# Interfaz de conexión (USB, tcp://IP:PUERTO, COM1)
PRINTER_INTERFACE=USB

# Modo de prueba (true = guarda en archivo, false = imprime real)
DRY_RUN=true

# Tamaño del papel
PAPER_SIZE=80mm

# Nivel de logging
LOG_LEVEL=info

# Habilitar SSL
ENABLE_SSL=false

# Puerto para métricas
METRICS_PORT=9090

# Configuración avanzada
RECONNECT_ATTEMPTS=10
RECONNECT_DELAY=5000
HEARTBEAT_INTERVAL=30000
CONNECTION_TIMEOUT=20000
