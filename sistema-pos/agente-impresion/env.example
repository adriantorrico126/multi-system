# ========================================
# CONFIGURACIÓN DEL AGENTE DE IMPRESIÓN
# ========================================
# Copia este archivo como .env y modifica los valores

# ========================================
# CONFIGURACIÓN DEL SERVIDOR
# ========================================
# URL del servidor backend de impresión
PRINT_SERVER_URL=http://localhost:3001

# ========================================
# CONFIGURACIÓN DEL AGENTE
# ========================================
# ID único del agente (se genera automáticamente si se deja vacío)
AGENT_ID=

# ID del restaurante al que pertenece este agente
RESTAURANTE_ID=1

# Token de autenticación del agente
PRINT_AGENT_TOKEN=un_token_secreto_para_autenticar_agentes

# Nombre descriptivo del agente
AGENT_NAME=Agente Principal

# ========================================
# CONFIGURACIÓN DE LA IMPRESORA
# ========================================
# Tipo de impresora (EPSON, STAR, CITIZEN)
PRINTER_TYPE=EPSON

# Interfaz de conexión (USB, tcp://IP:PUERTO, COM1)
PRINTER_INTERFACE=USB

# ========================================
# CONFIGURACIÓN DE IMPRESIÓN
# ========================================
# Modo de prueba (true = guarda en archivo, false = imprime real)
DRY_RUN=false

# Tamaño del papel (80mm, 58mm)
PAPER_SIZE=80mm

# ========================================
# CONFIGURACIÓN DE LOGGING
# ========================================
# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================
# Habilitar SSL (true/false)
ENABLE_SSL=false

# ========================================
# CONFIGURACIÓN DE MONITOREO
# ========================================
# Puerto para métricas (0 = deshabilitado)
METRICS_PORT=9090

# ========================================
# CONFIGURACIÓN AVANZADA
# ========================================
# Intentos de reconexión
RECONNECT_ATTEMPTS=10

# Delay entre intentos de reconexión (ms)
RECONNECT_DELAY=5000

# Intervalo de heartbeat (ms)
HEARTBEAT_INTERVAL=30000

# Timeout de conexión (ms)
CONNECTION_TIMEOUT=20000
