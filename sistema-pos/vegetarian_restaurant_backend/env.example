# =====================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =====================================================
# Copia este archivo como .env y configura tus credenciales reales

# Host de la base de datos
DB_HOST=your_database_host_here

# Puerto de la base de datos
DB_PORT=5432

# Usuario de la base de datos
DB_USER=your_database_user_here

# Contraseña de la base de datos
DB_PASSWORD=your_database_password_here

# Nombre de la base de datos
DB_DATABASE=your_database_name_here

# =====================================================
# CONFIGURACIÓN DEL SERVIDOR
# =====================================================
# Puerto del servidor
PORT=8080

# Entorno (development, production, test)
NODE_ENV=development

# =====================================================
# CONFIGURACIÓN JWT
# =====================================================
# Clave secreta para JWT (cambia esto en producción)
JWT_SECRET=your_jwt_secret_here

# Tiempo de expiración del token JWT (en segundos)
JWT_EXPIRES_IN=86400

# =====================================================
# CONFIGURACIÓN CORS
# =====================================================
# Orígenes permitidos para CORS (separados por comas)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =====================================================
# CONFIGURACIÓN DE LOGGING
# =====================================================
# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info

# =====================================================
# NOTAS IMPORTANTES
# =====================================================
# 1. NUNCA subas el archivo .env real a GitHub
# 2. Mantén este archivo .env.example actualizado
# 3. Usa variables de entorno en producción
# 4. Cambia todas las claves secretas en producción
