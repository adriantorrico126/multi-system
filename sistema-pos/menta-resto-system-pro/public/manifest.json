      "url": "/kitchen",
      "icons": [
        {
          "src": "/icons/kitchen-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Stats",
      "description": "Estad√≠sticas y reportes",
      "url": "/dashboard",
