# =====================================================
# CONFIGURACIÓN DEL BACKEND DE LA PÁGINA WEB
# MULTISERVE POS - MARKETING & CONVERSIÓN
# =====================================================

# Configuración del servidor
NODE_ENV=development
PORT=4000
HOST=localhost

# Configuración de la base de datos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sistempos
DB_USER=postgres
DB_PASSWORD=6951230Anacleta

# Configuración de seguridad
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Configuración de CORS
CORS_ORIGINS=http://localhost:8080,http://localhost:8082,http://127.0.0.1:8080,http://127.0.0.1:8082

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@multiserve.com

# Configuración de logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Configuración de analytics
ANALYTICS_ENABLED=true
TRACKING_RETENTION_DAYS=365

# Configuración de notificaciones
NOTIFICATION_SERVICE_ENABLED=true
NOTIFICATION_PORT=4001

# Configuración de backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
